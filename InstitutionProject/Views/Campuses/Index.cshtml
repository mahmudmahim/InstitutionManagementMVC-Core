@model IEnumerable<InstitutionProject.Models.Campus>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col">
        <div class="card col-6 offset-3 mt-2">
            <h3 class="card-header display-4 text-center bg-secondary-subtle mt-2 mb-2 ">Campuses</h3>
        </div>
        <div class="d-flex justify-content-end">
            <a asp-action="Create" asp-controller="Campuses" class="btn btn-outline-primary btn-sm fs-5"><i class="fa fa-plus-circle"></i> Add New</a>
        </div>
    </div>
    <table class="table table-bordered table-striped table-sm mt-2">
        <thead class="table-primary">
            <tr>
                <th>Institute</th>
                <th>@Html.DisplayNameFor(x=>x.PrincipleName)</th>
                <th>@Html.DisplayNameFor(x=>x.Address)</th>
                <th>@Html.DisplayNameFor(x=>x.Phone)</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Institute.InstituteName</td>
                    <td>@Html.DisplayFor(x=>item.PrincipleName)</td>
                    <td>@Html.DisplayFor(x=>item.Address)</td>
                    <td>@Html.DisplayFor(x=>item.Phone)</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Campuses" asp-route-id="@item.CampusId" class="btn btn-outline-info"><i class="fa fa-edit"></i></a>
                        <a asp-action="Delete" asp-controller="Campuses" asp-route-id="@item.CampusId" class="btn btn-outline-danger"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

