@model InstitutionProject.Models.Campus
@{
    ViewData["Title"] = "Delete";
}

<div class="card col-6 offset-3 mt-2">
    <h3 class="card-header display-4 text-center bg-danger-subtle mt-2">Are you sure you want to delete this Campus?</h3>
</div>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrincipleName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrincipleName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Institute.InstituteName)
        </dt>
        <dd class="col-sm-10">
               @Html.DisplayFor(model => model.Institute.InstituteName)
        </dd>
    </dl>

    <form asp-action="Delete" asp-controller="Campuses">
        <input type="hidden" asp-for="CampusId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" asp-controller="Campuses" class="btn btn-outline-warning btn-sm"><i class="fa fa-arrow-circle-left"></i>>Back to List</a>
    </form>
</div>


